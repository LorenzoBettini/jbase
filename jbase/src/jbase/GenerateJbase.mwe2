module jbase.GenerateJbase

import org.eclipse.xtext.xtext.generator.*
import org.eclipse.xtext.xtext.generator.model.project.*

var rootPath = ".."

Workflow {
	component = XtextGenerator {
		configuration = {
			project = StandardProjectConfig {
				baseName = "jbase"
				rootPath = rootPath
				runtimeTest = {
					enabled = true
				}
				eclipsePlugin = {
					enabled = true
				}
				eclipsePluginTest = {
					enabled = true
				}
				createEclipseMetaData = true
			}
			code = {
				encoding = "UTF-8"
				fileHeader = "/*\n * generated by Xtext \${version}\n */"
				preferXtendStubs = false
			}
		}
		language = StandardLanguage {
			name = "jbase.Jbase"
			fileExtensions = "jbase"

			referencedResource = "platform:/resource/jbase/model/custom/Jbase.genmodel"

			fragment = ecore2xtext.Ecore2XtextValueConverterServiceFragment2 auto-inject {}

			xbaseSupport = {
				// we don't use the inferrer in Jbase itself:
				// users of Jbase will have to implement an inferrer
				generateXtendInferrer = false
				useInferredJvmModel = false
			}

			serializer = {
				generateXtendStub = false
			}
			validator = {
				// composedCheck = "org.eclipse.xtext.validation.NamesAreUniqueValidator"
				generateXtendStub = true
			}
		}
	}
}
